{
	"extends": "eslint:recommended",
	"env": {
        "node": true,
        "browser": true,
        "es6": true
	},
	"parserOptions": {
        "ecmaVersion": 2015
	},
	"rules": {
		"semi": ["error", "always"],
		"curly": ["error", "all"],
		"quotes": ["error", "double", {"allowTemplateLiterals": true}],
		"eqeqeq": ["error", "smart"],
		"no-multi-spaces": "error",
		"no-useless-return": "error",
		"no-var": "error",
		"indent": "error",
		"no-multiple-empty-lines": ["error", {"max": 2, "maxEOF": 1, "maxBOF": 0}],
		"no-trailing-spaces": "error",
		"prefer-const": "error"
	}
}
